{
    "name": "rocket-code",
    "displayName": "Rocket.Code",
    "description": "Use Rocket.Chat from within Visual Studio Code",
    "version": "0.0.2",
    "preview": true,
    "publisher": "andrefischer",
    "author": {
        "name": "Andr√© Fischer",
        "email": "amfischer@gmail.com"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "rocketchat",
        "Rocket.Chat",
        "chat"
    ],
    "license": "CC-BY-NC-SA-4.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/andre-f/rocket-code.git"
    },
    "bugs": {
        "url": "https://github.com/andre-f/rocket-code/issues",
        "email": "amfischer@gmail.com"
    },
    "activationEvents": [
        "onCommand:rocketCode.login"
    ],
    "icon": "./icon128.png",
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Rocket.Code configuration",
            "properties": {
                "rocketCode.serverUrl": {
                    "type": "string",
                    "description": "The URL of the Rocket.Chat server, e.g. https://rocket.example.com"
                },
                "rocketCode.username": {
                    "type": "string",
                    "description": "Your username for the Rocket.Chat server"
                },
                "rocketCode.password": {
                    "type": "string",
                    "description": "Your password for the Rocket.Chat server (optional, if not supplied, you'll be prompted)"
                },
                "rocketCode.channel": {
                    "type": "string",
                    "default": "#general",
                    "description": "The default channel to post to."
                }
            }
        },
        "commands": [
            {
                "command": "rocketCode.login",
                "title": "Rocket.Code: login"
            },
            {
                "command": "rocketCode.logout",
                "title": "Rocket.Code: logout"
            },
            {
                "command": "rocketCode.testMessage",
                "title": "Rocket.Code: send test message"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "http-status-codes": "^1.1.6",
        "node-rest-client": "^3.0.7"
    }
}
